                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        You
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="#">Rate a TV show</a>
                        <a class="dropdown-item" href="#">Rate a movie</a>
                        <a class="dropdown-item" href="#">Your favourites</a>
                        <a class="dropdown-item" href="#">Your watch list</a>


                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="#">Login</a>
                    </div>
                </li>
            </ul>
            <form class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" type="text" placeholder="Search" style="padding-right: 30px;">
                <button class="btn btn-outline-primary my-2 my-sm-0" type="submit">Search</button>
            </form>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
  
        <footer class="container-fluid bg-grey py-5">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <div class="row">
                            <div class="col-md-6 ">
                                <div class="logo-part">
                   
                                    <a href="https://www.themoviedb.org" target="_blank">

                                        <img src="~/Content/tmdblogo.png" class="w-50 logo-footer">
                                    </a>
                                  
                                </div>
                            </div>
                            <div class="col-md-6 px-4">
