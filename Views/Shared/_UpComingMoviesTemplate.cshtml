@model WHATISNEXT.ViewModels.MainPageViewModel
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<div class="container">

    <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-12">
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    @{
                        var first = true;
                    }

                    @foreach (var item in Model.UpComingMoviesViewModel)
                    {
                        <div class="carousel-item @(first ? Html.Raw("active") : Html.Raw(""))">
                            <a href='@Url.Action("MoreInfo", "Home", new { item.id  })'>
                                <img class="d-block w-100" style="  background-position: center; background-repeat: no-repeat; background-size: cover;"
                                     src="@String.Concat("https://image.tmdb.org/t/p/original", @Html.DisplayFor(modelItem => item.backdrop_path))"
                                     alt="@item.title"
                                    
                                   >
                            </a>                      
                            <div class="carousel-caption" style="white-space: nowrap; ">
                                <h4 class="text-center" style="color: white;">@Html.DisplayFor(modelItem => item.title)</h4>

                            </div>

                        </div>
                
                        first = false;
                    }

                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button"
                   data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button"
                   data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
    <div class="p-2">
        <h3 class=" text-center justify-content-center" style="color: #00BBFF;">Upcoming Movies</h3>
